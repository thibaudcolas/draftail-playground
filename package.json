{
  "name": "draftail-playground",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "^8.2.1",
    "npm": "^5.3.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "proseWrap": "preserve"
  },
  "devDependencies": {
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "enzyme-to-json": "^3.3.4",
    "flow-bin": "^0.74.0",
    "prettier": "^1.13.5",
    "react-scripts": "^2.1.1",
    "react-test-renderer": "^16.6.0",
    "source-map-explorer": "^1.6.0"
  },
  "dependencies": {
    "core-js": "^2.5.7",
    "draft-js": "^0.10.5",
    "draftail": "^1.0.0",
    "normalize.css": "^8.0.0",
    "prismjs": "^1.6.0",
    "react": "^16.6.1",
    "react-dom": "^16.6.1",
    "react-json-view": "^1.17.1",
    "react-modal": "^3.5.1",
    "react-resizable": "^1.7.5",
    "react-simpler-select": "^3.0.0",
    "react-tabs": "^2.2.1",
    "reading-time": "^1.1.0",
    "styled-components": "^3.3.2"
  },
  "proxy": "http://localhost:5000",
  "scripts": {
    "heroku-postbuild": "npm run build -s",
    "start": "npm run server -s & npm run watch -s",
    "server": "FLASK_APP=app.py FLASK_DEBUG=1 flask run",
    "watch": "react-scripts start",
    "flow": "flow",
    "build": "react-scripts build && source-map-explorer --html build/static/js/main.* > build/source-map-explorer.html",
    "dist": "CI=true npm run build -s",
    "linter:format": "prettier --list-different",
    "lint": "npm run linter:format -s -- '**/*.{js,css,json,md}'",
    "formatter": "prettier --write",
    "format": "npm run formatter -s -- '**/*.{js,css,json,md}'",
    "report:build": "open public/source-map-explorer.html",
    "test": "react-scripts test",
    "test:watch": "react-scripts test --watch",
    "test:coverage": "react-scripts test --coverage",
    "test:ci": "npm run lint -s && npm run flow -s && npm run dist -s"
  }
}
